@functions {
    protected string GetUserLoginName()
    {
        string UserType = "";
        try
        {
            UserType = LoginSession.Current.usertype;
            string userLoginName = string.Empty;
            switch (UserType)
            {
                case "RETAIL":
                case "EMPLOYEE":
                    CEDS ceds = new CEDS();
                    userLoginName = ceds.GetEmpName(Employee.RefType.EmpNo, Context.User.Identity.Name);
                    if (UserType == "RETAIL")
                        userLoginName += $"IVR Code：{LoginSession.Current.ivrcode} " ;
                    ceds.Dispose();
                    break;
                case "VASS":
                    userLoginName = $"IVR Code - {LoginSession.Current.ivrcode} ";
                    break;
                case "VENDOR":
                    userLoginName = LoginSession.Current.engname;
                    break;
                default:
                    break;
            }
            // userLoginName += $"IdentityName : {Context.User.Identity.Name}";
            return userLoginName;
        }
        catch (Exception err)
        {
            return "Error";
        }
    }
}

